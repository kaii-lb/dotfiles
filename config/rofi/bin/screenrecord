#!/usr/bin/env bash
rofi_command="rofi -markup -markup-rows -theme $HOME/.config/rofi/config/screenrecord.rasi -steal-focus"

datetime=$(date +"%Y-%m-%d %I-%M-%S")
dir="/home/$USER/Videos/Screen-Recordings"
#file="Screen Recording from ${date} ${time}.png"

# Icons
icon1="/home/$USER/.config/rofi/images/camera-movie.svg"
icon2="/home/$USER/.config/rofi/images/timer.svg"

screen="  Record Desktop"
area="  Record Area"
window="  Record Window"
infivearea="  Record Area in 5s"
infive="  Record in 5s"

# Notify and view screenshot
notify_view () {
	notify-send -u low --replace-id=699 -i $icon1 "Copied to clipboard."
	if [[ -e "$dir/Screen Recording from ${datetime}.mp4" ]]; then
		notify-send -u low --replace-id=699 -i $icon1 "Screen Recording Saved."
	else
		notify-send -u low --replace-id=699 -i $icon1 "Screen Recording Deleted."
	fi
}

# countdown
countdown () {
	for sec in `seq $1 -1 1`; do
		notify-send -t 1000 --replace-id=699 -i $icon2 "Recording in : $sec"
		sleep 1
	done
}

# take shots
recordnow () {
	sleep 0.5 && gpu-screen-recorder -k h264 -q high -w screen -f 60 -a default_output -o $dir/"Screen Recording from ${datetime}".mp4
	wl-copy < $dir/"Screen Recording from ${datetime}".mp4
	notify_view
}

record5 () {
	countdown '5'
	sleep 1 &&  gpu-screen-recorder -k h264 -q high -w screen -f 60 -a default_output -o $dir/"Screen Recording from ${datetime}".mp4
	wl-copy < $dir/"Screen Recording from ${datetime}".mp4
	notify_view
}

record5area () {
	countdown '5'
	sleep 1 &&  gpu-screen-recorder -k h264 -q high -w region -f 60 -a default_output -region "$(slurp -b#1e1e1e55 -c#b4befe -w4 -f %Wx%H+%X+%Y)" -o $dir/"Screen Recording from ${datetime}".mp4
	wl-copy < $dir/"Screen Recording from ${datetime}".mp4
	notify_view
}

recordwin () {
	gpu-screen-recorder -k h264 -q high -w region -f 60 -a default_output -region "$(hyprctl activewindow -j | jq -r ".at,.size" | jq -s "add" | jq '_nwise(4)' | jq -r '"\(.[2])x\(.[3])+\(.[0])+\(.[1])"')" -o $dir/"Screen Recording from ${datetime}".mp4
	wl-copy < $dir/"Screen Recording from ${datetime}".mp4
	notify_view
}

recordarea () {
	gpu-screen-recorder -k h264 -q high -w region -f 60 -a default_output -region "$(slurp -b#1e1e1e55 -c#b4befe -w4 -f %Wx%H+%X+%Y)" -o $dir/"Screen Recording from ${datetime}".mp4
	wl-copy < $dir/"Screen Recording from ${datetime}".mp4
	notify_view
}

if [[ ! -d "$dir/" ]]; then
	mkdir -p "$dir/"
fi

# Variable passed to rofi
options="$screen\n$area\n$window\n$infivearea\n$infive"

chosen="$(echo -e "$options"| $rofi_command -p 'Screen Recording' -dmenu -selected-row 0)"
case $chosen in
    $screen)
		recordnow
        ;;
    $area)
		recordarea
        ;;
    $window)
		recordwin
		;;
    $infive)
		record5
		;;
    $infivearea)
		record5area
        ;;
esac

