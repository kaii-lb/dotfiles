#!/bin/sh

ddir="$HOME/.config/rofi/config"

# Ask for confirmation
rdialog () {
	echo -e "\n" | rofi -dmenu -p "Are you sure?" -kb-select-1 "y" -kb-select-2 "n" -markup -markup-rows -theme $HOME/.config/rofi/config/confirm.rasi -steal-focus
}

if [[ $1 -eq 1 ]]; then
	ans=$(rdialog &)
	if [[ $ans == "" ]]; then
		systemctl poweroff
	elif [[ $ans == "" ]]; then
		exit
    else
		exit
    fi
elif [[ $1 -eq 2 ]]; then
	ans=$(rdialog &)
	if [[ $ans == "" ]]; then
		systemctl reboot
	elif [[ $ans == "" ]]; then
		exit
    else
		exit
    fi
elif [[ $1 -eq 3 ]]; then
	ans=$(rdialog &)
	if [[ $ans == "" ]]; then
		sh /home/$USER/.config/hypr/scripts/lock.sh &
	else
		exit
	fi
elif [[ $1 -eq 4 ]]; then 
	ans=$(rdialog &)
	if [[ $ans == "" ]]; then
		playerctl pause
		pamixer --mute
		sh /home/$USER/.config/hypr/scripts/lock.sh &
		systemctl suspend
	elif [[ $ans == "" ]]; then
		exit
    else
		exit
    fi
elif [[ $1 -eq 5 ]]; then
	ans=$(rdialog &)
	if [[ $ans == "" ]]; then
		hyprctl dispatch exit 0
	elif [[ $ans == "" ]]; then
		exit
    else
		exit
       fi
else
	echo "Please provide an option of 1 -> 5"
	echo "1 is shutdown"
	echo "2 is reboot"
	echo "3 is lock"
	echo "4 is suspend"
	echo "5 is logout"
	exit
fi
